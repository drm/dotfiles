[user]
    name = Gerard van Helden
    email = gerard@zicht.nl

[core]
    excludesfile = /home/gerard/.gitignore_global
    autocrlf = input

[push]
    default = simple
    followTags = 1

[alias]
    st = status
    ci = commit
    r = rev-parse --show-toplevel
    t = tag -a
    ff = merge --ff-only
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s (%ae) %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --notes

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[color "diff"]
    new = green bold
    old = red bold

[tag]
    sort = version:refname

[pull]
    ff = only
